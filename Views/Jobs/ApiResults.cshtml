@model List<careerPortal.Models.UsaJob>

<h2>USAJobs Search Results</h2>
<p class="text-muted">These jobs are not saved locally until you click "Save"</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Position</th>
            <th>Organization</th>
            <th>Location</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.PositionTitle</td>
                <td>@job.OrganizationName</td>
                <td>@job.Location</td>
                <td>@job.SalaryRange</td>
                <td>
                    <form asp-action="SaveFromApi" method="post">
                        <input type="hidden" name="positionId" value="@job.PositionId" />
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to My Jobs
</a>